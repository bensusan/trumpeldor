             x:Class="trumpeldor.Views.TakingPicturePage"
             xmlns:translator="clr-namespace:trumpeldor.Helpers">
    <ContentPage.Content>
        <StackLayout Style="{DynamicResource mainStackLayout}">
            <Button x:Name="CameraButton" Text="{translator:Translate take_picture}" Grid.Row="1" />
            <StackLayout x:Name="BtnLayout" Style="{DynamicResource mainorStackLayout}">

            </StackLayout>
            <Image x:Name="PhotoImage" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>