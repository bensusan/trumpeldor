<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trumpeldor.Views.informationPage">
    <ContentPage.Content>
        <StackLayout Style="{DynamicResource mainStackLayout}">
            <Label x:Name="generalInformation" AutomationId="InfoTxt" />
            <ScrollView x:Name="galleryImages" Orientation="Horizontal">
                <StackLayout x:Name="stackGalleryImages" Orientation="Horizontal">
                </StackLayout>
            </ScrollView>
            <ScrollView x:Name="galleryVideos" Orientation="Horizontal">
                <StackLayout x:Name="stackGalleryVideos" Orientation="Horizontal">
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>