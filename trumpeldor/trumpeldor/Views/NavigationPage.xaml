<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trumpeldor.Views.NavigationPage">
    <ContentPage.Content>
        <StackLayout Style="{DynamicResource mainStackLayout}">

            <Label x:Name="scoreLabel" Style="{DynamicResource lableStyle}"/>
            <StackLayout x:Name="hintsLayout" Style="{DynamicResource mainorStackLayout}"> 
                <Label Text="hints" Style="{DynamicResource lableStyle}"/>
            </StackLayout>
            <Button Text="add clue" Clicked="Get_Clue_Button_Clicked" Style="{StaticResource largeButtonStyle}" />
            <Button Text="You've Reached Your Destionation" Clicked="Next_Destination_Button_Clicked" Style="{StaticResource largeButtonStyle}" />
            <Label Text="map:" Style="{DynamicResource lableStyle}"/>
            <Button x:Name="mapImage" Clicked="mapImage_Clicked"/>
            <!--<Image x:Name="mapImage" Style="{DynamicResource smallImageStyle}"/>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>