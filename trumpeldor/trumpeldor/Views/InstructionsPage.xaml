<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trumpeldor.Views.instructionsPage"
             xmlns:translator="clr-namespace:trumpeldor.Helpers"
             NavigationPage.HasNavigationBar="False"
             ControlTemplate="{StaticResource template}">
    <ContentPage.Content>
        <StackLayout Style="{DynamicResource mainStackLayout}">
            <Label Text="{translator:Translate InstructionsPageTitle}" Style="{StaticResource titleStyle}"/>
            <Label x:Name="details" Text="" Style="{StaticResource labelStyle}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>