<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trumpeldor.Views.firsPagexaml">


    <ContentPage.Content>
        <StackLayout Style="{DynamicResource mainStackLayout}">
            <Button Text="play" Clicked="Play_Button_Clicked" Style="{StaticResource largeButtonStyle}"/>
            <Button Text="how to play" Clicked="HowToPlay_Button_Clicked" Style="{StaticResource largeButtonStyle}" />
            <Button Text="information" Clicked="Info_Button_Clicked" Style="{StaticResource largeButtonStyle}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>